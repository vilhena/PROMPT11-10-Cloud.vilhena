@model Ana.Web.Models.CardCreateOrEditModel

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="span8 offset2">
        <p>@Html.ActionLink("« Back to Board", "Details", "Board", new { id = Model.board_id }, new { @class = "btn btn-small" })</p>
    </div>
</div>
<div class="row">
    <div class="span2">
        <p></p>
    </div>
    <div class="span8">
        <div class="hero-grey elevate postit">
            <h2>Create New Card</h2>
            <p>
                Use the form below to create a new card. 
            </p>
            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)
                <div>
                    <fieldset>
                        @Html.HiddenFor(m=>m.board_id)
                        <legend>Card Information</legend>
                            <div class="control-group">
                                @Html.LabelFor(model => model.name)
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.name, new { placeholder = "Board Name" })@Html.ValidationMessageFor(m => m.name)
                                    @Html.ValidationMessageFor(model => model.name)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.text)
                                <div class="controls">
                                    @Html.TextAreaFor(m => m.text)@Html.ValidationMessageFor(m => m.text)
                                    @Html.ValidationMessageFor(model => model.text)
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                <button type="submit" class="btn btn-large btn-primary">Create</button>
                                @Html.ActionLink("Cancel", "Details", "Board", new { id = Model.board_id }, new { @class = "btn btn-large" })
                                </div>
                            </div>
                    </fieldset>
                </div>
            }
        </div>
    </div>
    <div class="span2">
        <p></p>
    </div>

</div>


