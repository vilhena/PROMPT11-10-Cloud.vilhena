@model Ana.Web.Models.BoardCreateOrEditModel

@{
    ViewBag.Title = "ViewPage1";
}
<div class="row">
    <div class="span8 offset2">
        <p>@Html.ActionLink("« Back to Board", "Details", "Board", null, new { @class = "btn btn-small" })</p>
    </div>
</div>
<div class="row">
    <div class="span2">
        <p></p>
    </div>
    <div class="span8">
        <div class="hero-grey elevate">
            <h2>Edit</h2>
            <p>
                Use the form below to edit the board. 
            </p>
            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)
                <div>
                    <fieldset>
                        <legend>Board Information</legend>
                        <div class="control-group">
                            @Html.LabelFor(model => model.name)
                            <div class="controls">
                                @Html.TextBoxFor(m => m.name, new { placeholder = "Board Name" })@Html.ValidationMessageFor(m => m.name)
                                @Html.ValidationMessageFor(model => model.name)
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(model => model.description)
                            <div class="controls">
                                @Html.TextAreaFor(m => m.description)@Html.ValidationMessageFor(m => m.name)
                                @Html.ValidationMessageFor(model => model.description)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button type="submit" class="btn btn-large btn-primary">Save</button>
                                @Html.ActionLink("Cancel", "Details", "Board", null, new { @class = "btn btn-large" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            }
      </div>
    </div>
    <div class="span2">
        <p></p>
    </div>

</div>

