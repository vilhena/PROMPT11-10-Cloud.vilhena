@if(Request.IsAuthenticated) {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> @User.Identity.Name <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@ActionLinkIcon("Profile", "Profile", "Account", "icon-pencil")</li>
            <li>@ActionLinkIcon("Developer", "Index", "Developer", "icon-magnet")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
        </ul>
    </li>
}
else
{
   <li>
    <p>@Html.ActionLink("Log On", "LogOn", "Account", null, new { @class = "btn btn-success btn-small" })</p>
   </li>
}

@helper ActionLinkIcon(string linkText, string action, string controller, string icon){
    <a href="@Url.Action(action, controller)"><i class="@icon"></i> @linkText</a>
}


