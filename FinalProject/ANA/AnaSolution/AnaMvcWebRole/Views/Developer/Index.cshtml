@model Ana.Web.Models.OAuthModel
@{
    ViewBag.Title = "Developer";
}
<div class="row">
    <div class="span2">
        <p></p>
    </div>
    <div class="span8">
        <div class="hero-grey elevate">
            <h2>Developer Zone</h2>
            <p>
                Here you can configure your app to acess data using oauth and web.
            </p>
            @if (Model.enabled)
            {
                <fieldset>
                    @Html.HiddenFor(m => m.id)
                    <legend>Application Information</legend>
                        <div class="control-group">
                            @Html.LabelFor(model => model.application_name)
                            <div class="controls">
                                @Html.DisplayFor(m => m.application_name)
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(model => model.client_id)
                            <div class="controls">
                                @Html.DisplayFor(m => m.client_id)
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(model => model.redirect_uri)
                            <div class="controls">
                                @Html.DisplayFor(m => m.redirect_uri)
                            </div>
                        </div>
                        <div class="control-group">
                            
                            @Html.LabelFor(model => model.secret)
                            <div class="controls">
                                @Html.DisplayFor(m => m.secret)
                            </div>
                        </div>
                </fieldset>
                @Html.ActionLink("Edit", "Edit", "Developer", null, new { @class = "btn btn-large btn-primary" });
            }
            else
            {
                @Html.ActionLink("Start Using Now!", "Edit", "Developer", null, new { @class = "btn btn-large btn-success" });
            }
        </div>
    </div>
    <div class="span2">
        <p></p>
    </div>

</div>
